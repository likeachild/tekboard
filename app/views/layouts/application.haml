!!! 5
%html{ lang: 'en', class: 'no-js'}
  %head
    %meta{ charset: 'utf-8'}/
    %title Techboard - Tech Jobs in South Africa - No recruitment agents
    %meta{'http-equiv'=>"X-UA-Compatible",:content=>"IE=edge,chrome=1"}
    %meta{ name: 'author', content: 'techboard.co.za'}/
    %meta{ name: 'description', content: 'Only the best tech jobs in South Africa, no recruitment agents'}
    %meta{ name: 'keywords', content: 'jobs, tech jobs, programming jobs, it jobs, south africa' }/
    %meta{ name: 'viewport', content: 'width=device-width; initial-scale=1.0; maximum-scale=1.0;' }/
    %meta{ name: 'distribution', content: 'global' }/
    %meta{ name: 'robots', content: 'follow, all' }/
    %meta{ name: 'language', content: 'en' }/
    %meta{ name: 'googlebot', content: 'index, follow' }/
    %meta{ name: 'revisit-after', content: '2 days' }/
    %link{ href: '/image/favicon.png', rel: 'shortcut icon', type: 'image/png' }/
    %link{ href: '/image/favicon.png', rel: 'apple-touch-icon', type: 'image/png' }/
    = stylesheet_link_tag 'screen'
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'jquery.wysiwyg'
    /in page analytics
    :javascript
      var userflyHost = (("https:" == document.location.protocol) ? "https://secure.userfly.com" : "http://asset.userfly.com");
      document.write(unescape("%3Cscript src='" + userflyHost + "/users/67280/userfly.js' type='text/javascript'%3E%3C/script%3E"));
  %body.bp
    .container
      #header
        = render :partial => "layouts/header", layout: false
      #content
        = yield
      #footer
        = render :partial => "layouts/footer", layout: false

    %script{ src: 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js', type: 'text/javascript' }
    %script{ src: '/javascripts/modernizr.js', type: 'text/javascript' }
    %script{ src: '/javascripts/jquery.wysiwyg.js', type: 'text/javascript' }
    %script{ src: '/javascripts/application.js', type: 'text/javascript' }
    %script{ src: "http://connect.facebook.net/en_US/all.js#xfbml=1"}
  /analytics
  :javascript
     var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-22763037-2']);
      _gaq.push(['_setDomainName', '.techboard.co.za']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
